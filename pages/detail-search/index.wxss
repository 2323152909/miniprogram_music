/* pages/detail-search/index.wxss */
page {
    padding: 112rpx 20rpx 0;
}

/* 搜索框 */
.search {
    position: fixed;
    top: 0;
    left: 20rpx;
    right: 20rpx;
    z-index: 999;
}

/* 热门搜索 */
.hot {
    padding: 10rpx;
}

.hot .keywords {
    display: flex;
    flex-wrap: wrap;
}

.hot .tag {
    font-size: 26rpx;
    background-color: #fff;
    padding: 10rpx 12rpx;
    border-radius: 16rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}

.hot .tag:first-of-type {
    color: #26ce8a;
}

/* 搜索建议 */
.suggest {
    padding: 10rpx;
}

.suggest .title {
    color: #26ce8a;
    font-size: 34rpx;
    font-weight: 700;
}

.suggest .list-item {
    display: flex;
    align-items: center;
    margin-top: 16rpx;
}

.suggest .list-item .icon {
    width: 66rpx;
    margin-left: -20rpx;
}

.suggest .list-item .text {
    font-size: 28rpx;
}

/* 搜索结果 */
.result {
    padding-bottom: 20rpx;
}

.result .title {
    color: #26ce8a;
    font-size: 34rpx;
    font-weight: 700;
}