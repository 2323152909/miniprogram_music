/* pages/home-music/index.wxss */
page {
    padding: 0 20rpx 20rpx;
}

/* 轮播图样式 */
.swiper {
    border-radius: 10rpx;
    overflow: hidden;
    /* 解决webview圆角不生效的bug */
    transform: translateY(0);
}

.swiper-item {
    display: flex;
}

.swiper-item .swiper-image {
    width: 100%;
}

.home-item {
    margin-top: 20rpx;
}