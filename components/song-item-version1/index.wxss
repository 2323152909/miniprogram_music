/* components/song-item-version1/index.wxss */
.item {
    display: flex;
    align-items: center;
    padding: 16rpx 0;
}

.item .image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 16rpx;
}

.content {
    margin-left: 16rpx;
    flex: 1;
}

.content .name {
    font-size: 32rpx;
    color: #555;
}

.content .source {
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #999;
}

.arrow .icon {
    height: 45rpx;
    width: 45rpx;
}